<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.aboutipbeja.MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/customToolbar"/>


    <fragment
        android:id="@+id/article_fragment"
        android:name="com.example.user.aboutipbeja.FragmentArticle"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        app:layout_constraintVertical_bias="0.0" />

    <fragment
        android:id="@+id/headline_fragment"
        android:name="com.example.user.aboutipbeja.FragmentHeadlines"
        android:layout_width="215dp"
        android:layout_height="0dp"
        android:layout_marginRight="140dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>